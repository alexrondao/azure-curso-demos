
@{
    ViewData["Title"] = "Novo Cliente";
}

<h2>Add</h2>

<form asp-action="Save" method="post" enctype="multipart/form-data" >
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input class="form-control" type="text" asp-for="Nome"  />
    </div>

    <div class="form-group">
        <label asp-for="idade"></label>
        <input class="form-control" type="number" asp-for="Idade" />
    </div>

    <div class="form-group">
        <label asp-for="Sexo"></label>
        <select class="form-control" type="text" asp-for="Sexo" asp-items="Html.GetEnumSelectList<Sexo>()">
            <option selected="selected">Selecione...</option>
        </select>
    </div>

    <div class="form-group">
        <label>Selecione a foto</label>
        <input type="file" class="form-control" name="imagem" />
    </div>

    <div>
        <button class="btn btn-success">Salvar</button>
        <a class="btn btn-success" asp-action="Index">Voltar</a>
    </div>
</form>

